<Window x:Class="Inbox2.UI.Windows.StatusUpdater"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sharedControls="clr-namespace:Inbox2.Framework.Plugins.SharedControls;assembly=Inbox2.Framework.Plugins" 
    Title="Update your status"
	ResizeMode="NoResize"
	Style="{StaticResource DialogStyle}"
	WindowStartupLocation="CenterScreen"
	Width="872"
	Height="100"
	MinWidth="550"
	MinHeight="100"
    SizeToContent="Height"
    Loaded="Window_Loaded"
	Unloaded="Window_Unloaded">

    <sharedControls:StatusUpdateControl Name="StatusUpdateControl" IsExpanded="true" Margin="20,0,0,10" RequestClose="StatusUpdateControl_OnRequestClose" />
    
</Window>
